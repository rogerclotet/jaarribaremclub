<!DOCTYPE html>
<html lang="ca">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Caminada Popular Vall de Lord</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro" rel="stylesheet">

        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" href="{{ asset('/favicon-32x32.png') }}" sizes="32x32">
        <link rel="icon" type="image/png" href="{{ asset('/favicon-16x16.png') }}" sizes="16x16">
        <link rel="manifest" href="{{ asset('/manifest.json') }}">
        <link rel="mask-icon" href="{{ asset('/safari-pinned-tab.svg') }}" color="#5bbad5">
        <meta name="theme-color" content="#ffffff">
    </head>
    <body>
    <div class="header-container">
        <a href="{{ path("blog") }}">
            <img src="{{ asset('/images/header.png') }}" class="img-responsive" alt="Caminada Popular Vall de Lord"/>
        </a>
        <a href="{{ path("about") }}" class="hidden-xs">
            <span class="subtitle">A.E. Ja Arribarem Club</span>
        </a>
    </div>

    <nav class="navbar nav-container">
        <div class="navbar-header visible-xs">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu"
                    aria-expanded="false">
                <span class="sr-only">Menú</span>
                <span class="glyphicon glyphicon-menu-hamburger"></span>
            </button>
            <span class="navbar-brand">{{ section_title }}</span>
        </div>

        <div class="collapse navbar-collapse" id="menu">
            <ul class="nav navbar-nav">
                {% spaceless %}
                    {% for route, title in menu %}
                        <li>
                            <a href="{{ path(route) }}"
                               {% if app.request.attributes.get('_route') == route %}class="current"{% endif %}>
                                {{ title }}
                            </a>
                        </li>
                    {% endfor %}
                {% endspaceless %}
            </ul>
            {% if is_granted('ROLE_ADMIN') %}
                <span class="logged-in hidden-xs">
                Administrador
                <a href="{{ logout_url() }}">
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                </a>
            </span>
            {% endif %}
        </div>
    </nav>

    <div class="main-container">
        <h1 class="hidden-xs">{{ section_title }}</h1>
        <div class="inner-container section-{{ app.request.attributes.get('_route') }}">
            {% block body %}{% endblock %}
        </div>
    </div>
    <div class="footer-container">
        <div class="colaboradors">
            <a href="http://santllorens.ddl.net/" target="_blank">
                <img
                        class="colaborador"
                        src="{{ asset('/images/footer/ajstll.png') }}"
                        alt="Ajuntament de St. Llorenç de Morunys"
                        title="Ajuntament de St. Llorenç de Morunys"
                />
            </a>
            <a href="http://guixers.ddl.net/" target="_blank">
                <img
                        src="{{ asset('/images/footer/ajguix.png') }}"
                        alt="Ajuntament de Guixers"
                        title="Ajuntament de Guixers"
                />
            </a>
            <a href="http://www.comapedra.cat/" target="_blank">
                <img
                        src="{{ asset('/images/footer/ajlaco.png') }}"
                        alt="Ajuntament de La Coma i La Pedra"
                        title="Ajuntament de La Coma i La Pedra"
                />
            </a>
            <a href="http://www.lavalldelord.com/" target="_blank">
                <img
                        src="{{ asset('/images/footer/valldelord.png') }}"
                        alt="Associació Turisme Vall de Lord"
                        title="Associació Turisme Vall de Lord"
                />
            </a>
            <img
                    src="{{ asset('/images/footer/pcivil.png') }}"
                    alt="Protecció Civil del Berguedà"
                    title="Protecció Civil del Berguedà"
            />
        </div>
        <span class="hidden-xs">Col·laboradors</span>
    </div>
    <div class="credits">
        Disseny: Ariadna Audivert · Programació: <span id="email">Roger Clotet</span>
    </div>

    {# Email #}
    <script>
        var user = 'clotet89',
            domain = 'gmail.com',
            element = document.getElementById('email');

        element.innerHTML = '<a href="mailto:' + user + '@' + domain + '" target="_blank">Roger Clotet</a>';
    </script>
    {# End Email #}

    {# Google Analytics #}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-13261293-1', 'auto');
        ga('send', 'pageview');
    </script>
    {# End Google Analytics #}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
